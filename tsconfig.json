{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "baseUrl": "./src",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsxImportSource": "@emotion/react", // Add the css prop
    "paths": {
      "src": ["."],
      "src/*": ["./*"],

      "app": ["./app"],
      "app/*": ["./app/*"],

      "pages": ["./pages"],
      "pages/*": ["./pages/*"],

      "processes": ["./processes"],
      "processes/*": ["./processes/*"],

      "widgets": ["./widgets"],
      "widgets/*": ["./widgets/*"],

      "features": ["./features"],
      "features/*": ["./features/*"],

      "entities": ["./entities"],
      "entities/*": ["./entities/*"],

      "shared": ["./shared"],
      "shared/*": ["./shared/*"]
    }
  },
  "include": ["src", "types"]
}
